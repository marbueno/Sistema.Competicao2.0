@{
    ViewData["Title"] = "TipoDespesaReceita";
}

<div id="appTipoDespesaReceita" class="content">
    <div class="card">
        <div v-if="appMain.newRegister === false">
            <div class="row">
                <div class="col-md-12" style="margin-left: 20px; margin-top: 20px;">
                    <button class="btn btn-fill btn-info" v-on:click="newRegister()">Novo Registro</button>
                </div>
            </div>

            <hr />

            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblTipoDespesaReceita" class="table tablesorter" cellspacing="0" width="100%">
                        <thead class="text-primary">
                            <tr>
                                <th>Código</th>
                                <th>Descrição</th>
                                <th>Tipo [D / R]</th>
                                <th style="width:15px;"></th>
                                <th style="width:15px;"></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

        <div v-if="appMain.newRegister">

            <div class="row">
                <div class="col-md-12">
                    <div class="card-header">
                        <h5 class="title">Criar/Editar Tipo de Despesa / Receita</h5>
                    </div>
                    <section>
                        <form id="frmTipoDespesaReceita" action="TipoDespesaReceitaCreateOrUpdate" method="post" class="form" data-ajax="true"
                              data-ajax-method="POST" data-ajax-failure="formOnFail" data-ajax-success="window.location = '/Admin/Controles/TipoDespesaReceita'">
                            <div class="card-body">
                                <input type="hidden" class="form-control" name="Codigo" v-model="Codigo">
                                <div class="row">
                                    <div class="col-md-6 pr-md-1">
                                        <div class="form-group">
                                            <label for="Nome">Descrição</label>
                                            <input type="text" class="form-control" placeholder="Descrição da Despesa / Receita" name="Descricao" data-vv-as="Descrição" v-model="Descricao" v-validate="'required'">
                                            <span v-show="errors.has('Descricao')" class="alert-form">{{ errors.first('Descricao') }}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 pr-md-1">
                                        <div class="form-group">
                                            <label>Despesa / Receita</label>
                                            <select class="form-control" name="TipoDespesaReceita" data-vv-as="Despesa / Receita" v-model="TipoDespesaReceita" v-validate data-vv-rules="required">
                                                <option value="D">DESPESA</option>
                                                <option value="R">RECEITA</option>
                                            </select>
                                            <span v-show="errors.has('TipoDespesaReceita')" class="alert-form">{{ errors.first('TipoDespesaReceita') }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-fill btn-primary" v-on:click="appMain.validateData($event, this.appTipoDespesaReceita)">Salvar</button>
                                <button class="btn btn-fill btn-info" v-on:click="appMain.cancelForm($event)">Cancelar</button>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_DeleteRegisterPartial.cshtml")
</div>

@section Scripts{
    <script src="~/js/TipoDespesaReceita.vue.js"></script>
}